<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/menu_background">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="18sp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/button_background"
            android:textColor="@color/button_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="自定义摄像头配置"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Settings content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 摄像头数量选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="摄像头数量"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择设备上的摄像头数量"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/spinner_camera_count"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/card_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </LinearLayout>

            <!-- 摄像头编号映射标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="摄像头编号映射"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请设置每个位置对应的摄像头编号（0, 1, 2, 3...），名称可自由修改，若留空则会隐藏名称框"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- 位置 1 配置 -->
            <LinearLayout
                android:id="@+id/config_front"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="位置 1"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="名称："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_front_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="前"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:maxLength="10"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_front_id"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="旋转："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_front_rotation"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 位置 2 配置 -->
            <LinearLayout
                android:id="@+id/config_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="位置 2"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="名称："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_back_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="后"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:maxLength="10"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_back_id"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="旋转："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_back_rotation"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 位置 3 配置 -->
            <LinearLayout
                android:id="@+id/config_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="位置 3"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="名称："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_left_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="左"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:maxLength="10"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_left_id"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="旋转："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_left_rotation"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 位置 4 配置 -->
            <LinearLayout
                android:id="@+id/config_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="位置 4"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="名称："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_right_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="右"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:maxLength="10"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_right_id"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="旋转："
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_right_rotation"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 保存按钮 -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存配置"
                android:textSize="18sp"
                android:minHeight="56dp"
                android:backgroundTint="@color/button_background"
                android:textColor="@color/button_text"
                android:layout_marginBottom="16dp" />

            <!-- 使用说明 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="使用说明"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 摄像头数量：选择您设备实际连接的摄像头数量\n\n• 摄像头编号：每个摄像头在系统中的唯一标识（通常为 0、1、2、3），可以在系统日志中查看\n\n• 位置名称：用于标识摄像头的显示名称，会显示在预览画面和文件名中\n\n• 保存配置后需要重启应用才能生效"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
