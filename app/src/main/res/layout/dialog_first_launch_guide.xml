<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_rounded_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="使用提示"
            android:textSize="38sp"
            android:textColor="@color/dialog_guide_title"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp" />

        <!-- 分隔线 -->
        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/dialog_guide_accent"
            android:layout_marginBottom="20dp" />

        <!-- 提示内容1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="①"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_accent"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用前，请务必授予软件所有可能需要的权限，并配置车型。"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_content"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- 提示内容2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="②"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_accent"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="若您的车型未适配，请选择自定义车型并自行调试，出现Bug为正常现象。"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_content"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- 提示内容3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="③"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_accent"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="若录制视频无法储存，请尝试修改「录制模式」。"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_content"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- 提示内容4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="④"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_accent"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软件首次安装完成配置后，或更新版本后，如遇Bug，建议先重启一次车机！"
                android:textSize="25sp"
                android:textColor="@color/dialog_guide_content"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- 分隔线2 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dialog_guide_divider"
            android:layout_marginBottom="16dp" />

        <!-- 作者信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本软件作者 @greenteacher46，当前版本免费开源，如遇收费售卖等商业行为，请告知作者。"
            android:textSize="20sp"
            android:textColor="@color/dialog_guide_secondary"
            android:lineSpacingExtra="3dp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- 打赏支持 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开发不易，如果这个项目对你有帮助，欢迎打赏支持！"
            android:textSize="20sp"
            android:textColor="@color/dialog_guide_accent"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- 二维码图片（尺寸在代码中根据屏幕密度动态设置） -->
        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:contentDescription="打赏二维码"
            android:layout_marginBottom="20dp" />

        <!-- 确认按钮 -->
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/dialog_button_background"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/dialog_guide_button_text"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
